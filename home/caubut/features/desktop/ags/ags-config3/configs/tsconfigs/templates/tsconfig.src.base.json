{
  "extends": "../../../tsconfig.base.json",
  "include": ["${configDir}/src"],
  "compilerOptions": {
    "tsBuildInfoFile": "${configDir}/.tsbuildinfo/src.tsbuildinfo",
    "rootDir": "${configDir}/src",
    "outDir": "${configDir}/dist/src",
    "typeRoots": ["../../../vendor/types", "${configDir}/node_modules/@types", "../../../node_modules/@types"],
    "types": [
      "@girs/gjs",
      "@girs/astal-3.0",
      "@girs/astal-4.0",
      "@girs/astalbattery-0.1",
      "@girs/astalhyprland-0.1",
      "@girs/astalmpris-0.1",
      "@girs/astalnetwork-0.1",
      "@girs/astaltray-0.1",
      "@girs/astalwp-0.1"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "astal/gtk3",
    "paths": {
      // NOTE: relative from baseBath
      "astal": ["./vendor/astal/src/index.ts"],
      "astal/gtk3": ["./vendor/astal/src/gtk3/index.ts"],
      "astal/gtk3/*": ["./vendor/astal/src/gtk3/*.ts"],
      "astal/gtk4": ["./vendor/astal/src/gtk4/index.ts"],
      "astal/gtk4/*": ["./vendor/astal/src/gtk4/*.ts"]
    }
  }
}
