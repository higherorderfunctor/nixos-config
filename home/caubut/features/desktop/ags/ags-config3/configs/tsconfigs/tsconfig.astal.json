{
  "$schema": "https://json.schemastore.org/tsconfig",
  // "extends": "./templates/tsconfig.gjs.base.json",
  "extends": ["${configDir}/../../node_modules/astal"],
  "include": [
    //  "../../vendor/types/@girs/astalio-0.1.d.ts",
    //  "../../vendor/types/@girs/astal*.d.ts",
    //
    // "/home/caubut/.local/share/ags"
    "${configDir}/../../node_modules/astal/index.ts",
    "${configDir}/../../node_modules/astal/src/**/*.ts"
  ],
  //"exclude": ["../../vendor/types/@girs/astal-4.0.d.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES2022",
    "target": "ES2023",
    "strict": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist/src",
    "noEmit": true,
    "noEmitOnError": false,
    //"lib": ["ES2022"],
    "rootDir": "${configDir}",
    "composite": true,
    "tsBuildInfoFile": "${configDir}/.tsbuildinfo/astal.tsbuildinfo",
    "typeRoots": [
      "${configDir}/node_modules/@types",
      "../../../../node_modules/@types",
      "../../vendor/types"
      //
    ],
    "types": ["@astal/astal"],
    "paths": {
      //"astal/gtk3/jsx-runtime": ["./node_modules/astal/src/gtk3/jsx-runtime.ts"],
      "astal": ["/home/caubut/.local/share/ags"],
      "astal/*": ["/home/caubut/.local/share/ags/*"]
    }
  }
}
