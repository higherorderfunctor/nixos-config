#!/usr/bin/env bash
set -e
if [[ ! -d "/home/caubut/Documents/projects/nixos-config/home/caubut/features/desktop/ags/ags-config3" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/caubut/Documents/projects/nixos-config/home/caubut/features/desktop/ags/ags-config3")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/caubut/Documents/projects/nixos-config/home/caubut/features/desktop/ags/ags-config3" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/caubut/Documents/projects/nixos-config/home/caubut/features/desktop/ags/ags-config3/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/caubut/Documents/projects/nixos-config/home/caubut/features/desktop/ags/ags-config3/.envrc" "/home/caubut/Documents/projects/nixos-config/home/caubut/features/desktop/ags/ags-config3/.direnv"/*.rc
