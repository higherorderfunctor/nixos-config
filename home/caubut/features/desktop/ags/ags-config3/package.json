{
  "name": "astal-config",
  "version": "0.0.0",
  "description": "Astal Config",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "pnpm": "9.15.3"
  },
  "pnpm": {
    "overrides": {
      "@effect/cli": "$@effect/cli",
      "@effect/opentelemetry": "$@effect/opentelemetry",
      "@effect/platform": "$@effect/platform",
      "@effect/platform-bun": "$@effect/platform-bun",
      "@effect/platform-node": "$@effect/platform-node",
      "@effect/platform-node-shared": "$@effect/platform-node-shared",
      "@effect/printer": "$@effect/printer",
      "@effect/printer-ansi": "$@effect/printer-ansi",
      "@effect/typeclass": "$@effect/typeclass",
      "effect": "$effect",
      "typescript": "$typescript"
    }
  },
  "scripts": {
    "build": "tsc -b configs/tsconfigs/tsconfig.build.json && pnpm -r --reporter=append-only --reporter-hide-prefix build",
    "clean": "rimraf -g **/dist .eslintcache **/.tsbuildinfo **/.rollup.cache",
    "clean:node_modules": "find . -name node_modules -print0 | xargs -0 rm -rf",
    "lint:spellcheck": "FORCE_COLOR=1 cspell --color",
    "lint:tsc": "tsc -b",
    "outdated": "pnpm -r outdated",
    "gen-types": "ags types 'Astal*' -d vendor/@types"
  },
  "dependencies": {
    "@effect/cli": "0.49.7",
    "@effect/opentelemetry": "0.41.3",
    "@effect/platform": "0.70.7",
    "@effect/platform-bun": "0.50.7",
    "@effect/platform-node": "0.65.7",
    "@effect/platform-node-shared": "0.20.7",
    "@effect/printer": "0.39.5",
    "@effect/printer-ansi": "0.39.5",
    "@effect/typeclass": "0.30.5",
    "effect": "3.11.5"
  },
  "devDependencies": {
    "@effect/language-service": "0.2.0",
    "@microsoft/api-extractor": "^7.49.1",
    "@types/bun": "1.1.14",
    "@types/girs__dom": "link:./vendor/@types/girs__dom",
    "@types/girs__gjs": "link:./vendor/@types/girs__gjs",
    "@types/node": "22.10.2",
    "@vtsls/language-server": "^0.2.6",
    "astal": "github:Aylur/astal#path:/lang/gjs",
    "esbuild": "^0.24.2",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "tsx": "^4.19.2",
    "typescript": "5.7.2",
    "vscode-langservers-extracted": "4.10.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "madge": {
    "tsConfig": {
      "compilerOptions": {
        "baseUrl": "."
      }
    },
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      }
    }
  }
}
