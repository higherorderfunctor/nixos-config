{
  "name": "astal-config",
  "version": "0.0.0",
  "description": "Astal Config",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "pnpm": "9.15.0"
  },
  "pnpm": {
    "overrides": {
      "@effect/cli": "$@effect/cli",
      "@effect/opentelemetry": "$@effect/opentelemetry",
      "@effect/platform": "$@effect/platform",
      "@effect/platform-bun": "$@effect/platform-bun",
      "@effect/platform-node": "$@effect/platform-node",
      "@effect/platform-node-shared": "$@effect/platform-node-shared",
      "@effect/printer": "$@effect/printer",
      "@effect/printer-ansi": "$@effect/printer-ansi",
      "@effect/typeclass": "$@effect/typeclass",
      "@typescript-eslint/eslint-plugin": "$typescript-eslint",
      "@typescript-eslint/parser": "$typescript-eslint",
      "@typescript-eslint/scope-manager": "$typescript-eslint",
      "@typescript-eslint/type-utils": "$typescript-eslint",
      "@typescript-eslint/types": "$typescript-eslint",
      "@typescript-eslint/typescript-estree": "$typescript-eslint",
      "@typescript-eslint/utils": "$typescript-eslint",
      "@typescript-eslint/visitor-keys": "$typescript-eslint",
      "effect": "$effect",
      "eslint": "$eslint",
      "typescript": "$typescript",
      "typescript-eslint": "$typescript-eslint"
    }
  },
  "scripts": {
    "build": "tsc -b configs/tsconfigs/tsconfig.build.json && pnpm -r --reporter=append-only --reporter-hide-prefix build",
    "clean": "rimraf -g **/dist .eslintcache **/.tsbuildinfo **/.rollup.cache",
    "postinstall": "ags types 'Astal*' -d vendor/types"
  },
  "dependencies": {
    "@effect/cli": "0.49.2",
    "@effect/opentelemetry": "0.40.2",
    "@effect/platform": "0.70.2",
    "@effect/platform-bun": "0.50.2",
    "@effect/platform-node": "0.65.2",
    "@effect/platform-node-shared": "0.20.2",
    "@effect/printer": "0.39.2",
    "@effect/printer-ansi": "0.39.2",
    "@effect/typeclass": "0.30.2",
    "effect": "3.11.4"
  },
  "devDependencies": {
    "@effect/language-service": "0.2.0",
    "@types/bun": "1.1.14",
    "eslint": "9.16.0",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "typescript": "5.7.2",
    "typescript-eslint": "8.16.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 120,
    "tabWidth": 2
  },
  "madge": {
    "tsConfig": {
      "compilerOptions": {
        "baseUrl": "."
      }
    },
    "detectiveOptions": {
      "ts": {
        "skipTypeImports": true
      }
    }
  }
}
