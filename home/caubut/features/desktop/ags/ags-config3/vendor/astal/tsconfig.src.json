{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "ES2022",
    "target": "ES2023",
    "strict": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist/src",
    "lib": ["ES2022"],
    "rootDir": ".",
    "composite": true,
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "typeRoots": [
      "../types",
      "node_modules/@types",
      "../../node_modules/@types"
      //
    ]
    // "types": ["@astal/astal"]
  }
}
