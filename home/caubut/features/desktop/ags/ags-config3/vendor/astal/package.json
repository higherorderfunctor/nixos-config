{
  "name": "astal",
  "version": "0.1.0",
  "description": "Building blocks for building linux desktop shell",
  "type": "module",
  "author": "Aylur",
  "license": "LGPL-2.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/aylur/astal.git",
    "directory": "lang/gjs"
  },
  "funding": {
    "type": "kofi",
    "url": "https://ko-fi.com/aylur"
  },
  "exports": {
    ".": {
      "types": "./dist/dts/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./gtk3": {
      "types": "./dist/dts/gtk3/index.d.ts",
      "import": "./dist/esm/gtk3/index.js",
      "default": "./dist/esm/gtk3/index.js"
    },
    "./gtk3/*": {
      "types": "./dist/dts/gtk3/*.d.ts",
      "import": "./dist/esm/gtk3/*.js",
      "default": "./dist/esm/gtk3/*.js"
    },
    "./gtk4": {
      "types": "./dist/dts/gtk4/index.d.ts",
      "import": "./dist/esm/gtk4/index.js",
      "default": "./dist/esm/gtk4/index.js"
    },
    "./gtk4/*": {
      "types": "./dist/dts/gtk4/*.d.ts",
      "import": "./dist/esm/gtk4/*.js",
      "default": "./dist/esm/gtk4/*.js"
    },
    "./*": {
      "types": "./dist/dts/*.d.ts",
      "import": "./dist/esm/*.js",
      "default": "./dist/esm/*.js"
    }
  },
  "engines": {
    "gjs": ">=1.79.0"
  },
  "os": [
    "linux"
  ],
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@ts-for-gir/cli": "^4.0.0-beta.16",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^8.57.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^7.18.0"
  },
  "scripts": {
    "lint": "eslint . --fix",
    "types": "ts-for-gir generate -o @girs"
  }
}
